# =============================================================================
# Hodei Jobs Platform - Environment Variables
# =============================================================================
# Copy this file to .env and configure your values
# cp .env.example .env
# =============================================================================

# =============================================================================
# PostgreSQL Database
# =============================================================================
POSTGRES_USER=hodei
POSTGRES_PASSWORD=change-me-in-production
POSTGRES_DB=hodei

# =============================================================================
# Backend API Server
# =============================================================================

# Database connection URL
HODEI_DATABASE_URL=postgres://hodei:change-me-in-production@postgres:5432/hodei

# Development mode (0=production, 1=development)
HODEI_DEV_MODE=0

# Worker Providers (enable one or more)
HODEI_DOCKER_ENABLED=1
HODEI_K8S_ENABLED=0
HODEI_FC_ENABLED=0

# OTP Secret for worker authentication (min 32 characters)
# Generate with: openssl rand -hex 32
HODEI_OTP_SECRET=change-me-generate-with-openssl-rand-hex-32

# Worker image for Docker/K8s providers
HODEI_WORKER_IMAGE=hodei-worker:latest

# Kubernetes namespace for worker pods
HODEI_K8S_NAMESPACE=hodei-workers

# gRPC server port
GRPC_PORT=50051

# Logging level
RUST_LOG=info,hodei=debug

# =============================================================================
# Frontend Web Dashboard
# =============================================================================

# Backend API URL (for gRPC-Web)
VITE_API_URL=http://localhost:50051

# Use mock data instead of real API (for development)
VITE_USE_MOCK=false

# =============================================================================
# Docker Compose Ports
# =============================================================================
WEB_PORT=80
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# =============================================================================
# Monitoring (Optional)
# =============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# =============================================================================
# Version
# =============================================================================
VERSION=1.0.0
